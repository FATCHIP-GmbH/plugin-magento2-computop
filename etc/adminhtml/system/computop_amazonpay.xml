<?xml version="1.0"?>
<include xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_include.xsd">
    <group id="computop_amazonpay" translate="label" type="text" sortOrder="400" showInDefault="1" showInWebsite="1" showInStore="1">
        <label>Amazon Pay</label>
        <field id="active" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Enabled</label>
            <config_path>payment/computop_amazonpay/active</config_path>
            <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
        </field>
        <field id="title" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Title</label>
            <config_path>payment/computop_amazonpay/title</config_path>
        </field>
        <field id="merchant_id" translate="label" type="text" sortOrder="15" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Merchant-ID</label>
        </field>
        <field id="public_key_id" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Public Key Id</label>
        </field>
        <field id="button_color" translate="label" type="select" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Button color</label>
            <source_model>Fatchip\Computop\Model\Source\AmazonButtonColor</source_model>
        </field>
        <field id="marketplace_country_code" translate="label" type="select" sortOrder="35" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Used Amazon marketplace</label>
            <source_model>Fatchip\Computop\Model\Source\AmazonMarketplace</source_model>
        </field>
        <field id="capture_method" translate="label" type="select" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Capture method</label>
            <source_model>Fatchip\Computop\Model\Source\CaptureMethods</source_model>
        </field>
        <field id="instructions" translate="label" type="textarea" sortOrder="60" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Instructions</label>
            <config_path>payment/computop_amazonpay/instructions</config_path>
        </field>
        <field id="min_order_total" translate="label" type="text" sortOrder="70" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Minimum Order Total</label>
            <config_path>payment/computop_amazonpay/min_order_total</config_path>
        </field>
        <field id="max_order_total" translate="label" type="text" sortOrder="80" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Maximum Order Total</label>
            <config_path>payment/computop_amazonpay/max_order_total</config_path>
        </field>
        <field id="sort_order" translate="label" type="text" sortOrder="90" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Sort Order</label>
            <config_path>payment/computop_amazonpay/sort_order</config_path>
        </field>
    </group>
</include>
